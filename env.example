# Environment configuration for AI Workforce Academy
# Copy this file to .env.local (for local dev) and fill in the values.
# In Vercel, add these in Project Settings > Environment Variables.

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=hello@ai-workforce-academy.com

# Database (choose one provider)
DATABASE_URL=
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Stripe (payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
# Optional: Price IDs for plans (recommended)
STRIPE_PRICE_STARTER_MONTHLY=
STRIPE_PRICE_STARTER_ANNUALLY=
STRIPE_PRICE_PROFESSIONAL_MONTHLY=
STRIPE_PRICE_PROFESSIONAL_ANNUALLY=
STRIPE_PRICE_ENTERPRISE_MONTHLY=
STRIPE_PRICE_ENTERPRISE_ANNUALLY=

# Analytics
# Google Analytics 4 (preferred variable)
NEXT_PUBLIC_GA_ID=
# Optional alternative names
GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Public site config (client-visible)
NEXT_PUBLIC_SITE_URL=
NEXT_PUBLIC_SUPPORT_EMAIL=support@ai-workforce-academy.com

# Optional: API base URL if deploying a separate API
NEXT_PUBLIC_API_URL=

# Optional: GitHub token (only if needed for CI or content pulls)
GITHUB_TOKEN=
