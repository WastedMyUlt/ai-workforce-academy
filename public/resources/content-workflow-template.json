{
  "name": "AI Content Creator Agent - Complete Workflow",
  "description": "Automated content creation workflow that generates blog posts, social media content, and marketing materials using AI",
  "version": "1.0",
  "modules": [
    {
      "id": 1,
      "app": "webhook",
      "operation": "customWebhook",
      "name": "Content Request Trigger",
      "parameters": {
        "hook": "/content-creation-trigger",
        "method": "POST"
      },
      "metadata": {
        "designer": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "id": 2,
      "app": "google-sheets",
      "operation": "searchRows",
      "name": "Get Content Calendar",
      "parameters": {
        "spreadsheet_id": "{{content_calendar_sheet_id}}",
        "range": "Content_Calendar!A:J",
        "search_criteria": {
          "status": "PENDING",
          "publish_date": "{{formatDate(addDays(now, 7), 'YYYY-MM-DD')}}"
        }
      },
      "metadata": {
        "designer": {
          "x": 300,
          "y": 0
        }
      }
    },
    {
      "id": 3,
      "app": "iterator",
      "operation": "iterator",
      "name": "Process Each Content Item",
      "parameters": {
        "array": "{{2.values}}"
      },
      "metadata": {
        "designer": {
          "x": 600,
          "y": 0
        }
      }
    },
    {
      "id": 4,
      "app": "openai",
      "operation": "createChatCompletion",
      "name": "Generate Blog Post",
      "parameters": {
        "model": "gpt-4",
        "messages": [
          {
            "role": "system",
            "content": "You are a professional content writer specializing in {{3.industry}} content. Create engaging, SEO-optimized blog posts that provide real value to readers. Include actionable insights and maintain a professional yet conversational tone."
          },
          {
            "role": "user",
            "content": "Write a comprehensive blog post about: {{3.topic}}\n\nTarget Keywords: {{3.keywords}}\nTarget Audience: {{3.audience}}\nWord Count: {{3.word_count}}\nTone: {{3.tone}}\n\nInclude:\n- Compelling headline\n- Meta description (150-160 chars)\n- Introduction with hook\n- 3-5 main sections with subheadings\n- Actionable takeaways\n- Call-to-action\n- SEO-optimized content"
          }
        ],
        "temperature": 0.7,
        "max_tokens": 2000
      },
      "metadata": {
        "designer": {
          "x": 900,
          "y": 0
        }
      }
    },
    {
      "id": 5,
      "app": "openai",
      "operation": "createChatCompletion",
      "name": "Generate Social Media Posts",
      "parameters": {
        "model": "gpt-4",
        "messages": [
          {
            "role": "system",
            "content": "You are a social media expert. Create engaging social media posts that drive engagement and align with the blog content. Adapt tone and format for each platform."
          },
          {
            "role": "user",
            "content": "Based on this blog post content: {{4.choices[0].message.content}}\n\nCreate social media posts for:\n1. LinkedIn (professional, 1-3 paragraphs)\n2. Twitter/X (concise, under 280 chars, include hashtags)\n3. Facebook (engaging, 1-2 paragraphs with call-to-action)\n4. Instagram (visual-focused caption with hashtags)\n\nInclude relevant hashtags and engagement hooks for each platform."
          }
        ],
        "temperature": 0.8,
        "max_tokens": 800
      },
      "metadata": {
        "designer": {
          "x": 1200,
          "y": 0
        }
      }
    },
    {
      "id": 6,
      "app": "openai",
      "operation": "createImage",
      "name": "Generate Featured Image",
      "parameters": {
        "prompt": "Professional, modern illustration for blog post about {{3.topic}}. Clean design, corporate style, suitable for {{3.industry}} audience. High quality, web-optimized.",
        "size": "1024x1024",
        "quality": "standard",
        "n": 1
      },
      "metadata": {
        "designer": {
          "x": 1500,
          "y": 0
        }
      }
    },
    {
      "id": 7,
      "app": "wordpress",
      "operation": "createPost",
      "name": "Publish to WordPress",
      "parameters": {
        "title": "{{4.headline}}",
        "content": "{{4.choices[0].message.content}}",
        "status": "draft",
        "featured_media": "{{6.data[0].url}}",
        "categories": ["{{3.category}}"],
        "tags": "{{split(3.keywords, ',')}}",
        "meta": {
          "description": "{{4.meta_description}}",
          "keywords": "{{3.keywords}}"
        }
      },
      "metadata": {
        "designer": {
          "x": 1800,
          "y": 0
        }
      }
    },
    {
      "id": 8,
      "app": "buffer",
      "operation": "createPost",
      "name": "Schedule Social Media",
      "parameters": {
        "profiles": ["{{linkedin_profile_id}}", "{{twitter_profile_id}}", "{{facebook_profile_id}}"],
        "text": "{{5.choices[0].message.content}}",
        "scheduled_at": "{{formatDate(addHours(now, 2), 'YYYY-MM-DD HH:mm:ss')}}",
        "media": {
          "link": "{{7.link}}",
          "photo": "{{6.data[0].url}}"
        }
      },
      "metadata": {
        "designer": {
          "x": 2100,
          "y": 0
        }
      }
    },
    {
      "id": 9,
      "app": "google-sheets",
      "operation": "updateRow",
      "name": "Update Content Calendar",
      "parameters": {
        "spreadsheet_id": "{{content_calendar_sheet_id}}",
        "range": "Content_Calendar!A{{3.row_number}}:J{{3.row_number}}",
        "values": [
          "{{3.topic}}",
          "{{3.type}}",
          "{{3.audience}}",
          "PUBLISHED",
          "{{formatDate(now, 'YYYY-MM-DD')}}",
          "{{7.link}}",
          "{{4.word_count}}",
          "{{3.keywords}}",
          "AI_GENERATED",
          "{{formatDate(now, 'YYYY-MM-DD HH:mm:ss')}}"
        ]
      },
      "metadata": {
        "designer": {
          "x": 2400,
          "y": 0
        }
      }
    },
    {
      "id": 10,
      "app": "slack",
      "operation": "sendMessage",
      "name": "Notify Content Team",
      "parameters": {
        "channel": "#content-marketing",
        "text": "üìù New content published!\n*Title:* {{4.headline}}\n*Type:* {{3.type}}\n*URL:* {{7.link}}\n*Social Media:* Scheduled for {{formatDate(addHours(now, 2), 'HH:mm')}}\n*Status:* Ready for review",
        "username": "Content AI Bot",
        "icon_emoji": ":writing_hand:"
      },
      "metadata": {
        "designer": {
          "x": 2700,
          "y": 0
        }
      }
    }
  ],
  "connections": [
    {
      "source": 1,
      "target": 2
    },
    {
      "source": 2,
      "target": 3
    },
    {
      "source": 3,
      "target": 4
    },
    {
      "source": 4,
      "target": 5
    },
    {
      "source": 4,
      "target": 6
    },
    {
      "source": 6,
      "target": 7
    },
    {
      "source": 7,
      "target": 8
    },
    {
      "source": 8,
      "target": 9
    },
    {
      "source": 9,
      "target": 10
    }
  ],
  "settings": {
    "execution": "auto",
    "max_cycles": 10,
    "timeout": 600
  }
}
